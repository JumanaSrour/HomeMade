<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    class="androidx.appcompat.app.AlertController$RecycleListView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    style="@style/corner_dialog"
    android:background="@drawable/layout_rounded"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_cancel_ingredient"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="@dimen/dim_40"
        android:layout_height="@dimen/dim_40"
        android:layout_marginBottom="@dimen/dim_50"
        android:src="@drawable/cancel" />

    <TextView
        android:id="@+id/tv_add_ingredient"
        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dim_10"
        android:text="@string/add_ingredient"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/dim_12sp" />


    <AutoCompleteTextView
        android:id="@+id/et_ingredient"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_35"
        android:layout_marginHorizontal="@dimen/dim_10"
        android:layout_marginTop="@dimen/dim_35"
        android:layout_marginBottom="@dimen/dim_30"
        android:background="@drawable/search_bg_grey"
        android:drawableStart="@drawable/ic_search"
        android:paddingStart="@dimen/dim_5"
        android:imeOptions="actionSearch"
        android:maxLines="1"
        android:fontFamily="@font/montserrat"
        android:textColorHint="@color/txt_color"
        android:textSize="@dimen/dim_12sp"
        app:iconPosition="start"
        android:inputType="textAutoComplete|textAutoCorrect"
        tools:ignore="RtlSymmetry" />

    <Button
        android:id="@+id/btn_add_ingredient"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_35"
        android:layout_below="@+id/et_ingredient"
        android:layout_marginHorizontal="@dimen/dim_10"
        android:layout_marginTop="@dimen/dim_30"
        android:background="@drawable/btn_regular"
        android:fontFamily="@font/montserrat"
        android:text="@string/add_ingredient_dialog"
        android:textAllCaps="false"
        android:textSize="@dimen/dim_12sp"
        app:backgroundTint="@null" />

</RelativeLayout>