<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dim_15"
        card_view:cardCornerRadius="@dimen/dim_13">

        <ImageView
            android:id="@+id/iv_recipe1"
            android:layout_width="@dimen/dim_100"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dim_15"
            android:paddingStart="@dimen/dim_15"
            android:paddingBottom="@dimen/dim_15"
            android:src="@drawable/recipe_one"/>
        <Button
            android:id="@+id/favorite_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_favorite"
            android:layout_gravity="end"
            android:paddingTop="@dimen/dim_15"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <ImageView
            android:id="@+id/iv_user1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dim_25"
            android:paddingTop="@dimen/dim_30"
            android:layout_marginStart="@dimen/dim_80"
            android:src="@drawable/user"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/tv_user1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jelena_denisova"
            style="@style/TextViewStyle"
            android:layout_gravity="start"
            android:paddingStart="@dimen/dim_120"
            android:paddingTop="@dimen/dim_30"
            android:textSize="@dimen/dim_14sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_recipe1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recipe_one"
            android:textSize="@dimen/dim_14sp"
            android:maxLines="3"
            android:paddingTop="@dimen/dim_15"
            android:paddingEnd="@dimen/dim_15"
            android:paddingStart="@dimen/dim_110"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>